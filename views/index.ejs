<%= errors %>

<!DOCTYPE html>
<html>
<head>
	<title><%= title %></title>
	<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
	<link rel='stylesheet' href='/stylesheets/style.css' />
	<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
	<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
</head>
<body>
	<div class="container">
		<div class="header">
			<h1>Tasks</h1>
		</div>
		<div class="row">
			<table class="table table-striped table-bordered">
				<thead>
					<tr>
						<th>Tasks</th>
						<th>Priority</th>
						<th>Deadline</th>
						<th>Created</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					<% for(x in tasks) {
						%>
						<tr>
							<td><%= tasks[x].name %></td>
							<td><%= (tasks[x].priority).toUpperCase() %></td>
							<td><%= tasks[x].deadline.toDateString() %></td>
							<td><%= tasks[x].created.toDateString() %></td>
							<td>
								<form action="/tasks/delete/<%= tasks[x].id %>" method="post">
									<input class='btn btn-danger' type="submit" value="Remove">
								</form>
							</td>
						</tr>
						<%
					} %>
				</tbody>
			</table>
		</div>
		<div class="header">
			<h1>Add a new Task</h1>
		</div>
		<div class="row">
			<form action="/tasks/create" class="form-horizontal" method="post">
				<div class="form-group">
					<label for="name" class="col-sm-2 control-label">Task Name:</label>
					<div class="col-sm-5">
						<input id="name" type="text" name="name" class="form-control">
					</div>
				</div>
				<div class="form-group">
					<label for="priority" class="col-sm-2 control-label">Priority</label>
					<div class="col-sm-5">
						<select name="priority" id="priority" class="form-control">
							<option value="high">HIGH</option>
							<option value="medium">MEDIUM</option>
							<option value="low">LOW</option>
						</select>
					</div>
				</div>
				<div class="form-group">
					<label for="deadline" class="col-sm-2 control-label">Deadline:</label>
					<div class="col-sm-5">
						<input id="deadline" type="date" name="deadline" class="form-control">
					</div>
				</div>
				<input class="col-sm-offset-6 btn btn-primary" type="submit" value="Create">
			</form>
		</div>
	</div>
	
</body>
</html>
